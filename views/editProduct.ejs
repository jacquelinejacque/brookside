<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <h2>Edit Product</h2>
    <div class="edit-product content"></div>
    <form action="/products/<%= product.id %>?_method=PUT" method="POST">
        <label for="name">Product Name:</label><br>
        <input type="text" id="name" name="name" value="<%= product.name %>" required><br>
        
        <label for="price">Price:</label><br>
        <input type="number" id="price" name="price" value="<%= product.price %>" required><br>
        
        <label for="description">Description:</label><br>
        <input type="text" id="description" name="description" value="<%= product.description %>" required><br>
        
        <label for="category">Category:</label><br>
        <input type="text" id="category" name="category" value="<%= product.category %>" required><br>
        
        <label for="stock_quantity">Stock Quantity:</label><br>
        <input type="number" id="stock_quantity" name="stock_quantity" value="<%= product.stock_quantity %>" required><br>
        
        <button type="submit">Update</button>
    </form>
    <%- include('./partials/footer.ejs') %>
</body>
</html>
