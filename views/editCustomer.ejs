<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <h2>Edit Customer</h2>
    <div class="edit-customer content"></div>
    <form action="/customer/<%= customer.id %>?_method=PUT" method="POST">
        <label for="customer_name">Customer Name:</label><br>
        <input type="text" id="customer_name" name="customer_name" value="<%= customer.customer_name %>" required><br>
        
        <label for="phone_number">Phone Number:</label><br>
        <input type="number" id="phone_number" name="phone_number" value="<%= customer.phone_number %>" required><br>
        
        <label for="location">Location:</label><br>
        <input type="text" id="location" name="location" value="<%= customer.location %>" required><br>
        
        <label for="stock_quantity">Stock Quantity:</label><br>
        <input type="number" id="stock_quantity" name="stock_quantity" value="<%= customer.stock_quantity %>" required><br>
        
        <button type="submit">Update</button>
    </form>
    <%- include('./partials/footer.ejs') %>
</body>
</html>
