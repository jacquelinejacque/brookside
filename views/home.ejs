<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="products content">
        <h2>All Products</h2>
        <% if (products.length > 0) { %>
            <% products.forEach(product => { %>
                <h3 class="productName"><a class="single" href="/products/<%= product.id %>"><%= product.name %></a></h3>
                <p class="price"><strong>Price:</strong> Ksh. <%= product.price %></p>
                <p class="description"><strong>Description:</strong> <%= product.description %></p>
                <p class="category"><strong>Category:</strong> <%= product.category %></p>
                <p class="stock_quantity"><strong>Stock Quantity:</strong> <%= product.stock_quantity %></p>
            <% }) %>   
        <% } else { %> 
            <p>No products updated yet!!</p>
        <% } %>
    </div>
    
    <%- include('./partials/footer.ejs') %>
</body>
</html>
